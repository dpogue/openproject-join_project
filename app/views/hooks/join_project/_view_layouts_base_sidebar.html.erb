<%- if defined?(@project) and current_user.logged? and !current_user.member_of?(@project) and current_user.allowed_to?(:request_to_join, @project) -%>
  <%- case @project.project_subscription -%>
  <%- when 'self-subscribe' -%>
    <%= form_for :join, :url => project_join_path(:project_id => @project.identifier), :method => :post do |f| %>
      <%= button_tag :type => :submit, :class => 'button -alt-highlight -expand' do %>
        <%= op_icon('button--icon icon-add') %>
        <span class="button--text"><%= l(:join_project_text_join_this_project) %></span>
      <% end %>
    <% end %>
  <%- end -%>
<%- end -%>
