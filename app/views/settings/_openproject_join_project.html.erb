<% html_title l(:label_administration), l(:label_plugins), 'Openproject Join Project' %>

<div class="form--field">
  <%= styled_label_tag("settings[roles]", l(:join_project_setting_roles)) %>
  <div class="form--field-container">
    <%= styled_select_tag("settings[roles]",
            options_from_collection_for_select(Role.all, :id, :name, (Setting.plugin_openproject_join_project['roles'] || []).collect(&:to_i)),
            :multiple => true,
            :container_class => '-slim')
    %>
  </div>
  <div class="form--field-instructions">
    <%= t(:join_project_setting_roles_help) %>
  </div>
</div>

<div class="form--field">
  <%= styled_label_tag("settings[email_content]", l(:join_project_setting_email_content)) %>
  <div class="form--field-container">
    <%= styled_text_area_tag("settings[email_content]",
            Setting.plugin_openproject_join_project['email_content'],
            :container_class => '-xxwide')
    %>
  </div>
</div>
